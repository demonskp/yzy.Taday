<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/item_year"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="1996"
        android:layout_centerInParent="true"
        android:textSize="15sp"
        android:background="@drawable/item_year"/>

    <TextView
        android:id="@+id/item_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  ——  "
        android:layout_alignBaseline="@+id/item_year"
        android:layout_toRightOf="@+id/item_year"
        android:textSize="20sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_"
        android:layout_toRightOf="@+id/item_"
        />


</RelativeLayout>